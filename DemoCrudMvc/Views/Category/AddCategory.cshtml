@model DAL.ViewModals.CategoryVM
@{
    ViewData["Title"] = "AddCategory";
}

<form asp-action="AddCategory" asp-controller="Category" class="container border rounded-3 p-3 p-md-5 mb-3 mt-5 d-flex flex-column gap-4 bg-white" method="post" enctype="multipart/form-data">
    <div class="row row-cols-1 row-cols-md-2 g-3">

        <div class="col-12 col-md-12 d-flex justify-content-between">
            <h5 class="fw-semibold">Add Category Form</h5>
            <div class="d-flex justify-content-end">

                <a asp-controller="Category" asp-action="Index" asp-area=""
                   class="btn btn-outline-info d-flex align-items-center">
                    <span class="material-symbols-outlined"> chevron_left </span> Back
                </a>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       asp-for="CategoriesName" />
                <label for="floatingInput" asp-for="CategoriesName">Category Name</label>
                <span asp-validation-for="CategoriesName" class="text-danger"></span>
            </div>
        </div> 
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       asp-for="CategoriesDescription" />
                <label for="floatingInput" asp-for="CategoriesDescription">Category Description</label>
                <span asp-validation-for="CategoriesDescription" class="text-danger"></span>
            </div>
        </div>
        
    </div>
    <div class="row">
        <div class="d-flex gap-3 align-items-center justify-content-end">
            <div class="d-flex justify-content-end">

                <button class="btn btn-info text-light" type="submit" id="submit">
                    Submit
                </button>
            </div>
            <button type="reset" class="btn btn-outline-info d-flex align-items-center" id="cancelButton">
                Cancel
            </button>
        </div>
    </div>
</form>