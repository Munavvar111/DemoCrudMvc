<script>
    $(document).ready(function () {
        let notifications = [];
        let currentNotificationIndex = 0;
        let notificationInterval;
        let fetchInterval;

        function fetchNotifications() {
            $.ajax({
                type: "GET",
                url: "/Home/GetNotificationData",
                success: function (data) {
                    if (data.data === true) {
                        return;
                    } else {
                        notifications = data.data.$values || [];
                        currentNotificationIndex = 0; // Reset index for new notifications
                    }
                },
                error: function () {
                    console.error('Error fetching notifications.');
                }
            });
        }

        function displayNotifications() {
            if (notifications.length > 0) {
                let notification = notifications[currentNotificationIndex];
                let message = `OrderProductId: ${notification.OrderProductId}, Customer: ${notification.Customer.FirstName} ${notification.Customer.LastName}, Order: ${formatTimeDifference(notification.OrderTime)}`;
                toastr.info(message);
                currentNotificationIndex++;

                if (currentNotificationIndex >= notifications.length) {
                    // All notifications have been displayed, fetch new notifications
                    currentNotificationIndex = 0;
                    clearInterval(notificationInterval);
                    fetchNotifications();
                    notificationInterval = setInterval(displayNotifications, 30000); // Restart displaying notifications
                }
            }
        }

        function formatTimeDifference(timeDifference) {
            let [hours, minutes, seconds] = timeDifference.split(':');
            seconds = seconds.split('.')[0]; // Remove milliseconds
            hours = parseInt(hours, 10);
            minutes = parseInt(minutes, 10);
            seconds = parseInt(seconds, 10);
            return `${hours}h ${minutes}m ${seconds}s`;
        }

        // Fetch notifications for the first time when the page loads
        fetchNotifications();

        // Start displaying notifications after 20 seconds
        setTimeout(() => {
            notificationInterval = setInterval(displayNotifications, 30000);
        }, 20000);
    });
</script>
<script>
    $(document).ready(function () {
        function fetchNotifications() {
            $.ajax({
                url: '/Home/GetNotification', // Adjust the URL to match your controller/action
                type: 'GET',
                success: function (response) {
                    console.log(response);
                    updateNotifications(response.data.$values);
                },
                error: function (error) {
                    console.error('Error fetching notifications', error);
                }
            });
        }

        function updateNotifications(notifications) {
            var $notifyList = $('#myNotifyList');
            var $countNotify = $('#countNotify');
            $notifyList.find('.notification-item').remove();

            if (notifications.length > 0) {
                $countNotify.text(notifications.length);

                notifications.forEach(function (notification) {
                    var listItem = $('<li>').addClass('notification-item')
                        .append($('<a>')
                            .attr('href', '/Notifications/NotificationDetails?orderId=' + notification.OrderId)
                            .append($('<div>').addClass('notification-header').text(notification.CustomerName + ' placed an order'))
                            .append($('<div>').addClass('notification-time').text('Order ID: ' + notification.OrderId + ' at ' + notification.OrderTime))
                        );
                    $notifyList.find('.notification-panel-footer').before(listItem);
                });
            } else {
                $countNotify.text(0);
                $notifyList.find('.notification-panel-footer').before('<li class="notification-item">No new notifications</li>');
            }

            // Adjust dropdown menu position
            var dropdownToggle = $('#notificationDropdownToggle');
            var dropdownMenu = $('#myNotifyList');
            if (dropdownToggle.length && dropdownMenu.length) {
                var dropdownMenuWidth = dropdownMenu.outerWidth();
                var navbarWidth = $('.navbar-collapse').outerWidth();
                var dropdownToggleOffset = dropdownToggle.offset().left;
                if (dropdownToggleOffset + dropdownMenuWidth > navbarWidth) {
                    dropdownMenu.css('right', 'auto');
                    dropdownMenu.css('left', 'auto');
                }
            }
        }

        fetchNotifications();
        setInterval(fetchNotifications, 60000); // Fetch every 60 seconds
    });
</script>
