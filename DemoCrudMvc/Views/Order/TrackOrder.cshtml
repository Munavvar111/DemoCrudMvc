            </div>
        </div>
    </div>
</div>
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row">

            <div class="col-lg-6">
                <div class="timeline p-4 block mb-4 ">
                    <p class="fw-bolder">Activity Timeline</p>
                    @foreach (var item in statusLog)
                    {
                        counter++;
                        var isActive = counter == totalItems ? "active" : "";
