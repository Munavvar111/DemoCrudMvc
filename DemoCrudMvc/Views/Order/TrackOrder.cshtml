                <div class="row mb-3 gx-3 bg-white d-flex align-items-center border-bottom rounded-1 p-3">
                    <div class="col-12 col-md-2 text-center mb-2 mb-md-0">
                        <img src="~/uploads/@item.FileName" class="img-fluid" alt="Product Image" />
                    </div>
