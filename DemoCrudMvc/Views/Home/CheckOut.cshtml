@model List<DAL.ViewModals.CartItems>
@{
    ViewData["Title"] = "CheckOut";
    var TotalPrice = 0;
}
@if (Model.Count > 0)
{

    @foreach (var item in Model)
    {
        TotalPrice = TotalPrice + (item.CartItemPrice * item.CartItemQuantity);
    }

    <div class="container-fluid">
        <h4>Billing Details</h4>
        <form asp-action="PlaceOrder" asp-controller="Home" method="post" id="CheckoutForm">

            <div class="container-fluid  row gap-3">
                <div class="border border-1 shadow-lg col-md-6" style="max-width:auto">

                    <div class="row gy-2 mt-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com"
                                       asp-for="@Model.FirstOrDefault().FirstName" />
                                <label for="floatingInput">First Name</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().FirstName"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com"
                                       asp-for="@Model.FirstOrDefault().LastName" />
                                <label for="floatingInput">Last Name</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().LastName"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com"
                                       asp-for="@Model.FirstOrDefault().Email" />
                                <label for="floatingInput">Email</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().Email"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" asp-for="@Model.FirstOrDefault().Address" />
                                <label for="floatingInput">Adress</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().Address"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="number"
                                       class="form-control"
                                       id="floatingInput"
                                       value=""
                                       placeholder="name@example.com" asp-for="@Model.FirstOrDefault().ZipCode" />
                                <label for="floatingInput">ZipCode</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().ZipCode"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" asp-for="@Model.FirstOrDefault().City" />
                                <label for="floatingInput">City</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().City"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-5 container-fluid bg-white shadow-lg">
                    <div class=" rounded-4">
                        <h5 class="m-3">Order Summary</h5>
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <div class="mt-3 row border-bottom">
                                    <div class="col-md-4">
                                        <input type="hidden" asp-for="@item.CartItemQuantity" name="CartQuantity">
                                        <input type="hidden" asp-for="@item.CartItemPrice" name="CartPrice">
                                        <input type="hidden" asp-for="@item.ProductId" name="ProductId">
                                        <img src="~/uploads/@item.CartFileName" width="200" style="max-width:100%" class="mb-3">
                                    </div>
                                    <div class="col-md-4">
                                        <span class="fw-bolder mx-3">@item.CartItemName</span>
                                        <div class="d-flex flex-column mx-3 text-muted fw-bold">
                                            <span class="">Price:</span>
                                            <span class="">$ @item.CartItemPrice</span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <span class="fw-bolder">Quantity:</span>
                                        <span class="text-muted fw-bolder">@item.CartItemQuantity</span>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class=" border-top mt-3 border-bottom mx-3">
                            <div class="row justify-content-between mb-3">
                                <div class="col-md-6 ">
                                    <span class=" fw-bolder">SubTotal</span>
                                </div>
                                <div class=" col-md-6">
                                    <span class="fw-bolder text-muted">
                                        $ @TotalPrice
                                    </span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between row mb-3">
                                <div class="col-md-6">
                                    <span class=" fw-bolder">Shipping</span>
                                </div>
                                <div class="col-md-6">
                                    <span class="fw-bolder text-muted">
                                        Free
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class=" row mx-3 mt-3 mb-3">
                            <div class="col-md-6">
                                <span class="fw-bolder">SubTotal</span>
                            </div>
                            <div class="col-md-6">
                                <span class="fw-bolder text-muted">
                                    $ @TotalPrice
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end my-3 mr-5">
                        <button class="btn btn-success" type="submit" onclick="RemoveCartItem()">Place The Order</button>
                    </div>
                </div>

            </div>
        </form>

    </div>
}
<script>
    function RemoveCartItem() {
        console.log("hii")
        localStorage.clear();
        //clear after the validation of form--Panding

    }
</script>
