@model List<DAL.ViewModals.CartItems>
@{
    ViewData["Title"] = "CheckOut";
    var TotalPrice = 0;
}
<style>

    .clamp-text {
        display: -webkit-box;
        -webkit-line-clamp: 2; /* Limit to 4 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #657380; /* Text color */

    }

    .payment-method {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .form-check {
        margin-bottom: 10px;
    }

    .form-check-input {
        margin-right: 10px;
        vertical-align: middle;
    }

    .form-check-label {
        display: inline-block;
        vertical-align: middle;
    }

    .payment-logo {
        width: 24px;
        height: 24px;
        margin-right: 5px;
        vertical-align: middle;
    }

</style>
@if (Model.Count > 0)
{

    @foreach (var item in Model)
    {
        TotalPrice = TotalPrice + (item.CartItemPrice * item.CartItemQuantity);
    }

    <div class="container-fluid">
        <div class="container d-flex justify-content-between mt-3 mx-3 mb-3 ">
            <h4>Billing Details</h4>
            <div class="d-flex justify-content-end">
                <a asp-controller="Home" asp-action="Index" asp-area=""
                   class="btn btn-outline-info d-flex align-items-center">
                    <span class="material-symbols-outlined"> chevron_left </span> Back
                </a>
            </div>
        </div>
        <form asp-action="PlaceOrder" asp-controller="Home" method="post" id="CheckoutForm">

            <div class="container-fluid  row gap-3">
                <div class="bg-white border border-1 shadow-lg col-md-6" style="max-width:auto">

                    <div class="row gy-2 mt-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="Firstname"
                                       placeholder="name@example.com"
                                       asp-for="@Model.FirstOrDefault().FirstName" required />
                                <label for="floatingInput">First Name</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().FirstName"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="Lastname"
                                       placeholder="name@example.com"
                                       asp-for="@Model.FirstOrDefault().LastName" required />
                                <label for="floatingInput">Last Name</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().LastName"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="email"
                                       placeholder="name@example.com"
                                       asp-for="@Model.FirstOrDefault().Email" required />
                                <label for="floatingInput">Email</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().Email"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="Address"
                                       placeholder="name@example.com" asp-for="@Model.FirstOrDefault().Address" required />
                                <label for="floatingInput">Adress</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().Address"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="number"
                                       class="form-control"
                                       id="floatingInput"
                                       value=""
                                       placeholder="name@example.com" asp-for="@Model.FirstOrDefault().ZipCode" required />
                                <label for="floatingInput">ZipCode</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().ZipCode"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput"
                                       placeholder="name@example.com" asp-for="@Model.FirstOrDefault().City" required />
                                <label for="floatingInput">City</label>
                                <span class="text-danger" asp-validation-for="@Model.FirstOrDefault().City"></span>
                            </div>
                        </div>
                        <div class="payment-method">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    <img src="https://img.freepik.com/free-vector/flat-design-cash-delivery_23-2148808917.jpg?w=740&t=st=1718126619~exp=1718127219~hmac=d672e59fd0e3f99b19920d1a10140f073aabd1e58dcd6f7a1cb7586d0f3c479c" alt="Cash on Delivery" class="payment-logo"> Cash on Delivery
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked value="2">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    <img src="https://img.freepik.com/free-vector/flat-design-cash-delivery_23-2148808917.jpg?w=740&t=st=1718126619~exp=1718127219~hmac=d672e59fd0e3f99b19920d1a10140f073aabd1e58dcd6f7a1cb7586d0f3c479c" alt="Online Payment" class="payment-logo"> Online Payment
                                </label>
                            </div>
                        </div>



                    </div>
                </div>
                <div class="col-md-5 container-fluid bg-white shadow-lg">
                    <div class=" rounded-4">
                        <h5 class="m-3">Order Summary</h5>
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <div class="mt-3 row border-bottom">
                                    <div class="col-md-4">
                                        <input type="hidden" asp-for="@item.CartItemQuantity" name="CartQuantity">
                                        <input type="hidden" asp-for="@item.CartItemPrice" name="CartPrice">
                                        <input type="hidden" asp-for="@item.ProductId" name="ProductId">
                                        <img src="~/uploads/@item.CartFileName" width="200" style="max-width:100%" class="mb-3">
                                    </div>

                                    <div class="col-md-8 d-flex flex-wrap row">

                                        <div class="col-md-12">
                                            <span class="fw-bolder  clamp-text">@item.CartItemName</span>
                                        </div>

                                        <div class="col-lg-4 d-flex flex-column text-muted fw-bold">
                                            <span class="text-black">Price:</span>
                                            <span class=""> $@item.CartItemPrice</span>
                                        </div>
                                        <div class="col-lg-4">
                                            <span class="fw-bolder">Quantity:</span><br>
                                            <span class="text-muted fw-bolder">@item.CartItemQuantity</span>
                                        </div>
                                        <div class="col-lg-4">
                                            <span class="fw-bolder">Total Price:</span>
                                            <span class="text-muted fw-bolder">$@(@item.CartItemPrice * @item.CartItemQuantity)</span>
                                        </div>

                                    </div>

                                </div>
                            }
                        </div>
                        <div class=" border-top mt-3 border-bottom mx-3">
                            <div class="row justify-content-between mb-3">
                                <div class="col-md-6 ">
                                    <span class=" fw-bolder">SubTotal</span>
                                </div>
                                <div class=" col-md-6">
                                    <span class="fw-bolder text-muted">
                                        $ @TotalPrice
                                    </span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between row mb-3">
                                <div class="col-md-6">
                                    <span class=" fw-bolder">Shipping</span>
                                </div>
                                <div class="col-md-6">
                                    <span class="fw-bolder text-muted">
                                        Free
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class=" row mx-3 mt-3 mb-3">
                            <div class="col-md-6">
                                <span class="fw-bolder">SubTotal</span>
                            </div>
                            <div class="col-md-6">
                                <span class="fw-bolder text-muted">
                                    $ @TotalPrice
                                </span>
                            </div>
                        </div>

                        <input id="razorpay_payment_id" type="hidden" name="razorpay_payment_id" />
                        <input id="razorpay_order_id" type="hidden" name="razorpay_order_id" />
                        <input id="razorpay_signature" type="hidden" name="razorpay_signature" />
                    </div>
                    <div class="d-flex justify-content-end my-3 mr-5">
                        <button class="btn btn-success" type="button" onclick="RemoveCartItem()">Place The Order</button>
                    </div>
                </div>

            </div>
        </form>
    </div>

}
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script>
$(document).ready(function() {
    // Initialize the validator
    $('#CheckoutForm').validate({
        rules: {
            FirstName: {
                required: true,
                minlength: 2
            },
            LastName: {
                required: true,
                minlength: 2
            },
            RadioSelection: {
                required: true
            }
        },
        messages: {
            FirstName: {
                required: "Please enter your first name",
                minlength: "Your first name must consist of at least 2 characters"
            },
            LastName: {
                required: "Please enter your last name",
                minlength: "Your last name must consist of at least 2 characters"
            },
            RadioSelection: {
                required: "Please select an option"
            }
        },
        errorElement: 'span',
        errorClass: 'text-danger',
        errorPlacement: function(error, element) {
            if (element.attr("type") == "radio") {
                error.appendTo(element.parent().parent());
            } else {
                error.insertAfter(element);
            }
        }
    });
});

